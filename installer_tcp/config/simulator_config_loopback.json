{
  "tcp_mode": "server",
  "matlab_server_ip": "127.0.0.1",
  "matlab_server_port": 5000,
  
  "devices": {
    "ars": {
      "enabled": true,
      "matlab_ports": [5000, 5001, 5002, 5003, 5004, 5005],
      "duplicate_primary_to_redundant": true,
      "redundant_variation_percent": 0.1,
      "output_mode": "serial",
      "output_config": {
        "port": "/dev/ttyUSB0",
        "baud_rate": 115200,
        "data_bits": 8,
        "stop_bits": 1,
        "parity": "N",
        "timeout": 1.0,
        "flow_control": "none"
      },
      "endianness": "little",
      "usb_loopback_enabled": true,
      "usb_loopback_port": "/dev/ttyUSB0",
      "log_packets_to_file": false,
      "packet_log_file": ""
    },
    "magnetometer": {
      "enabled": true,
      "matlab_ports": [6000, 6001, 6002],
      "output_mode": "can",
      "output_config": {
        "interface": "socketcan",
        "channel": "can0",
        "bitrate": 500000,
        "timeout": 1.0
      },
      "endianness": "little",
      "usb_loopback_enabled": true,
      "usb_loopback_port": "/dev/ttyUSB1",
      "log_packets_to_file": false,
      "packet_log_file": ""
    },
    "reaction_wheel": {
      "enabled": true,
      "matlab_ports": [7000, 7001, 7002, 7003],
      "output_mode": "tcp",
      "output_config": {
        "target_ip": "192.168.1.200",
        "target_port": 8000,
        "timeout": 5.0,
        "keepalive": true,
        "buffer_size": 4096
      },
      "endianness": "little",
      "usb_loopback_enabled": true,
      "usb_loopback_port": "/dev/ttyUSB2",
      "log_packets_to_file": false,
      "packet_log_file": ""
    }
  }
}
