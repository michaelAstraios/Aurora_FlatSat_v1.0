{
  "tcp_mode": "server",
  "matlab_server_ip": "127.0.0.1",
  "matlab_server_port": 5000,
  
  "devices": {
    "ars": {
      "enabled": true,
      "matlab_ports": [50038, 50039, 50040, 50041, 50042, 50043, 50044, 50045, 50046, 50047, 50048, 50049],
      "duplicate_primary_to_redundant": true,
      "redundant_variation_percent": 0.1,
      "output_mode": "serial",
      "output_config": {
        "port": "/dev/ttyUSB0",
        "baud_rate": 115200,
        "data_bits": 8,
        "stop_bits": 1,
        "parity": "N",
        "timeout": 1.0,
        "flow_control": "none"
      },
      "endianness": "little",
      "usb_loopback_enabled": false,
      "usb_loopback_port": "/dev/ttyUSB0",
      "log_packets_to_file": true,
      "packet_log_file": "ars_packets.log",
      "status_cycling_enabled": false,
      "status_cycle_interval": 10.0,
      "status_scenarios": ["normal", "warning", "error"],
      "_comment_tcp": "ARS system now uses TCP/IP instead of UDP for improved reliability"
    },
    "magnetometer": {
      "enabled": true,
      "matlab_ports": [6000, 6001, 6002],
      "output_mode": "can",
      "output_config": {
        "interface": "socketcan",
        "channel": "can0",
        "bitrate": 500000,
        "timeout": 1.0
      },
      "endianness": "little",
      "usb_loopback_enabled": false,
      "usb_loopback_port": "/dev/ttyUSB1",
      "log_packets_to_file": true,
      "packet_log_file": "magnetometer_packets.log",
      "status_cycling_enabled": false,
      "status_cycle_interval": 15.0,
      "status_scenarios": ["normal", "warning", "calibration_mode"]
    },
    "reaction_wheel": {
      "enabled": false,
      "matlab_ports": [7000, 7001, 7002, 7003],
      "output_mode": "tcp",
      "output_config": {
        "target_ip": "192.168.1.200",
        "target_port": 8000,
        "timeout": 1.0
      },
      "endianness": "little",
      "usb_loopback_enabled": false,
      "usb_loopback_port": "/dev/ttyUSB2",
      "log_packets_to_file": true,
      "packet_log_file": "reaction_wheel_packets.log",
      "status_cycling_enabled": false,
      "status_cycle_interval": 20.0,
      "status_scenarios": ["normal", "warning", "error", "maintenance_mode"]
    }
  },
  
  "_comment_tcp_upgrade": "This configuration file has been updated for TCP-based ARS system",
  "_comment_benefits": "TCP provides better reliability, connection management, and error handling compared to UDP"
}
